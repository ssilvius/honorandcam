---
import Layout from '../layouts/Layout.astro';

// Simple password protection - replace with proper auth in production
const url = new URL(Astro.request.url);
const password = url.searchParams.get('p');
const correctPassword = 'wedding2025'; // Change this!

if (password !== correctPassword) {
  return new Response('Unauthorized', { status: 401 });
}

// In production, this would fetch from KV
// const rsvps = await locals.RSVPS.list();
const sampleRSVPs = [
  {
    code: 'ABC123',
    attending: true,
    guestCount: 2,
    guestNames: ['John Doe', 'Jane Doe'],
    dietaryRestrictions: 'Vegetarian',
    songRequest: 'Dancing Queen',
    submittedAt: '2024-09-03T10:30:00Z'
  },
  {
    code: 'DEF456', 
    attending: false,
    guestCount: 1,
    guestNames: ['Alice Smith'],
    notes: 'Sorry, have a conflict!',
    submittedAt: '2024-09-03T11:15:00Z'
  }
];
---

<Layout title="RSVP Admin - Honor & Cam">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-8">RSVP Responses</h1>
    
    <div class="bg-white rounded-lg shadow-lg p-6">
      <div class="grid gap-6">
        {sampleRSVPs.map((rsvp) => (
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-800">
                  Code: {rsvp.code}
                </h3>
                <p class="text-sm text-gray-600">
                  Submitted: {new Date(rsvp.submittedAt).toLocaleDateString()}
                </p>
              </div>
              <span class={`px-3 py-1 rounded-full text-sm font-medium ${
                rsvp.attending 
                  ? 'bg-green-100 text-green-800' 
                  : 'bg-red-100 text-red-800'
              }`}>
                {rsvp.attending ? 'Attending' : 'Not Attending'}
              </span>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4 text-sm">
              <div>
                <p><strong>Guest Count:</strong> {rsvp.guestCount}</p>
                <p><strong>Names:</strong></p>
                <ul class="list-disc list-inside ml-2">
                  {rsvp.guestNames.map((name) => (
                    <li>{name}</li>
                  ))}
                </ul>
              </div>
              
              <div>
                {rsvp.dietaryRestrictions && (
                  <p><strong>Dietary:</strong> {rsvp.dietaryRestrictions}</p>
                )}
                {rsvp.songRequest && (
                  <p><strong>Song Request:</strong> {rsvp.songRequest}</p>
                )}
                {rsvp.notes && (
                  <p><strong>Notes:</strong> {rsvp.notes}</p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="mt-8 text-center text-gray-600">
        <p>Total Responses: {sampleRSVPs.length}</p>
        <p>Attending: {sampleRSVPs.filter(r => r.attending).length}</p>
        <p>Not Attending: {sampleRSVPs.filter(r => !r.attending).length}</p>
      </div>
    </div>
  </div>
</Layout>
