---
import Layout from '../layouts/Layout.astro';
import PhotoGallery from '../components/PhotoGallery.astro';
---

<Layout title="The Day - Honor & Cam's Wedding" description="A photo journal of Honor & Cam's wedding day">
  <div class="max-w-7xl py-6 sm:py-8 md:py-12">
    <header class="mb-8 sm:mb-12">
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-4 sm:mb-6 font-fraunces text-accent">
        The Day
      </h1>
      <p class="text-foreground text-lg sm:text-xl leading-relaxed font-questrial">
        A photo journal of our wedding celebration
      </p>
    </header>
    
    <PhotoGallery />
  </div>
</Layout>