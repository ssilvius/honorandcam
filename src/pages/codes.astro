---
import Layout from '../layouts/Layout.astro';
import { SAMPLE_GUESTS } from '../lib/guests';
---

<Layout title="Guest Codes - Honor & Cam">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-8">Guest Invitation Codes</h1>
    <p class="text-center text-gray-600 mb-8">For testing purposes - these would be printed on physical invitations</p>
    
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {SAMPLE_GUESTS.map((guest) => (
        <div class="bg-white p-6 rounded-lg shadow-md border">
          <h3 class="font-semibold text-lg text-gray-800 mb-2">{guest.primaryName}</h3>
          <div class="space-y-1 text-sm text-gray-600">
            <p><strong>Code:</strong> <span class="font-mono text-lg text-rose-600">{guest.code}</span></p>
            <p><strong>Max Guests:</strong> {guest.maxGuests}</p>
            <p><strong>Pre-filled Names:</strong></p>
            <ul class="list-disc list-inside ml-2">
              {guest.guestNames.map((name) => (
                <li>{name}</li>
              ))}
            </ul>
            {guest.email && <p><strong>Email:</strong> {guest.email}</p>}
            {guest.notes && <p><strong>Notes:</strong> {guest.notes}</p>}
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a 
        href="/rsvp" 
        class="inline-block bg-rose-600 text-white px-6 py-3 rounded-lg hover:bg-rose-700 font-medium"
      >
        Test the RSVP Form â†’
      </a>
    </div>
  </div>
</Layout>
