---
interface Props {
  children: any;
}

const { children } = Astro.props;
---

<section class="py-16 bg-emerald-800 text-white">
  <div class="max-w-3xl mx-auto px-4 text-center">
    <h2 class="text-3xl mb-6" style="font-family: 'Sacramento', cursive;">
      <slot />
    </h2>
    <p class="text-xl mb-8">Please let us know if you'll be joining us for our special day.</p>
    <a href="/rsvp" class="bg-white text-emerald-800 px-8 py-3 rounded-lg text-lg hover:bg-opacity-90 transition-all">
      RSVP by September 14th
    </a>
  </div>
</section>
