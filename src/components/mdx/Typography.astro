---
// Typography component for MDX content
// This file defines custom styling for standard HTML elements used in MDX
const { as: Tag = 'div', ...props } = Astro.props;
---

<!-- This is a wrapper component that can be used to style different HTML elements -->
<Tag {...props}>
  <slot />
</Tag>

<style>
  /* Base typography styles using semantic colors */
  :global(.mdx-content h1) {
    @apply text-4xl font-bold mb-6 text-accent;
    font-family: 'Sacramento', cursive;
  }
  
  :global(.mdx-content h2) {
    @apply text-3xl font-semibold mb-5 text-accent;
  }
  
  :global(.mdx-content h3) {
    @apply text-2xl font-semibold mb-4 text-accent;
  }
  
  :global(.mdx-content h4) {
    @apply text-xl font-semibold mb-3 text-accent;
  }
  
  :global(.mdx-content h5) {
    @apply text-lg font-semibold mb-3 text-accent;
  }
  
  :global(.mdx-content h6) {
    @apply text-base font-semibold mb-2 text-accent;
  }
  
  :global(.mdx-content p) {
    @apply text-foreground mb-4 leading-relaxed;
  }
  
  :global(.mdx-content a) {
    @apply text-primary hover:text-secondary transition-colors underline;
  }
  
  :global(.mdx-content ul) {
    @apply list-disc list-inside mb-4 text-foreground space-y-2;
  }
  
  :global(.mdx-content ol) {
    @apply list-decimal list-inside mb-4 text-foreground space-y-2;
  }
  
  :global(.mdx-content li) {
    @apply leading-relaxed;
  }
  
  :global(.mdx-content blockquote) {
    @apply border-l-4 border-primary pl-6 py-4 my-6 bg-primary/10 italic text-foreground;
  }
  
  :global(.mdx-content strong) {
    @apply font-semibold text-accent;
  }
  
  :global(.mdx-content em) {
    @apply italic text-foreground/90;
  }
  
  :global(.mdx-content code) {
    @apply bg-background/50 text-accent px-2 py-1 rounded text-sm font-mono;
  }
  
  :global(.mdx-content pre) {
    @apply bg-background/50 p-4 rounded-lg overflow-x-auto mb-4;
  }
  
  :global(.mdx-content pre code) {
    @apply bg-transparent p-0 text-foreground;
  }
  
  :global(.mdx-content hr) {
    @apply border-primary my-8;
  }
  
  :global(.mdx-content img) {
    @apply rounded-lg shadow-lg max-w-full h-auto my-6;
  }
  
  :global(.mdx-content table) {
    @apply w-full border-collapse mb-6;
  }
  
  :global(.mdx-content th) {
    @apply bg-primary/20 text-accent font-semibold p-3 border border-primary/30;
  }
  
  :global(.mdx-content td) {
    @apply text-foreground p-3 border border-primary/30;
  }
</style>