---
// Custom heading component for MDX
const { level = 1, ...props } = Astro.props;
const headingLevel = typeof level === 'number' && level >= 1 && level <= 6 ? level as 1|2|3|4|5|6 : 1;
const Tag = `h${headingLevel}` as keyof HTMLElementTagNameMap;
const classes: Record<1|2|3|4|5|6, string> = {
  1: 'text-4xl font-bold mb-6 text-accent',
  2: 'text-3xl font-semibold mb-5 text-accent', 
  3: 'text-2xl font-semibold mb-4 text-accent',
  4: 'text-xl font-semibold mb-3 text-accent',
  5: 'text-lg font-semibold mb-3 text-accent',
  6: 'text-base font-semibold mb-2 text-accent'
};
const baseClass = headingLevel === 1 ? "font-['Sacramento',cursive]" : '';
const classNames = `${classes[headingLevel]} ${baseClass}`;
---

<Tag class={classNames} {...props}>
  <slot />
</Tag>
  <slot />
</Tag>