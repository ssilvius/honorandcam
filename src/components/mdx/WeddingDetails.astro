---
interface Props {
  children: any;
}

const { children } = Astro.props;
---

<section class="py-20 bg-gradient-to-b from-emerald-50 to-yellow-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl md:text-5xl text-center text-emerald-800 mb-16" style="font-family: 'Sacramento', cursive;">
      <span style="background: linear-gradient(135deg, #fbbf24, #f59e0b, #d97706); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
        <slot />
      </span>
    </h2>
    <div class="grid md:grid-cols-3 gap-12">
      <div class="text-center group">
        <div class="bg-white rounded-lg p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-yellow-200">
          <div class="w-16 h-16 bg-gradient-to-br from-yellow-200 to-yellow-300 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:from-yellow-300 group-hover:to-yellow-400 transition-all">
            <svg class="w-8 h-8 text-emerald-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold text-emerald-800 mb-4">When</h3>
          <p class="text-emerald-700 text-lg">Saturday, October 14th, 2025</p>
          <p class="text-emerald-600">4:00 PM Ceremony</p>
          <p class="text-emerald-600">Reception to follow</p>
        </div>
      </div>
      <div class="text-center group">
        <div class="bg-white rounded-lg p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-yellow-200">
          <div class="w-16 h-16 bg-gradient-to-br from-yellow-200 to-yellow-300 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:from-yellow-300 group-hover:to-yellow-400 transition-all">
            <svg class="w-8 h-8 text-emerald-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold text-emerald-800 mb-4">Where</h3>
          <p class="text-emerald-700 text-lg">The Garden Estate</p>
          <p class="text-emerald-600">123 Beautiful Lane</p>
          <p class="text-emerald-600">Somewhere, CA</p>
        </div>
      </div>
      <div class="text-center group">
        <div class="bg-white rounded-lg p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-yellow-200">
          <div class="w-16 h-16 bg-gradient-to-br from-yellow-200 to-yellow-300 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:from-yellow-300 group-hover:to-yellow-400 transition-all">
            <svg class="w-8 h-8 text-emerald-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold text-emerald-800 mb-4">Dress Code</h3>
          <p class="text-emerald-700 text-lg">Garden Party Elegance</p>
          <p class="text-emerald-600">Semi-formal attire</p>
          <p class="text-emerald-600">Comfortable shoes recommended</p>
        </div>
      </div>
    </div>
    <div class="text-center mt-16">
      <a href="/wedding-details" class="inline-block text-yellow-600 hover:text-yellow-700 font-medium text-lg border-b border-yellow-600 hover:border-yellow-700 transition-colors">
        View Full Details â†’
      </a>
    </div>
  </div>
</section>
